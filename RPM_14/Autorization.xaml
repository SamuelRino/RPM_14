<Window x:Class="RPM_14.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPM_14"
        mc:Ignorable="d"
        Title="Авторизация" Height="150" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Grid Margin="15">
        <StackPanel>
            <PasswordBox x:Name="tb_Password" Margin="3" PasswordChar="*"/>
            <Button Content="Войти" Margin="3" IsDefault="True" Click="btn_Enter_click"/>
            <Button Content="Отмена" Margin="3" IsCancel="True" Click="btn_Cancel_click"/>
        </StackPanel>
    </Grid>
</Window>
