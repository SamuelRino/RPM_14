<Window x:Class="RPM_14.Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPM_14"
        mc:Ignorable="d"
        Title="Preferences" Height="250" Width="150" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <StackPanel>
            <Label HorizontalAlignment="Center" Content="Строк:" Margin="3"/>
            <TextBox x:Name="tb_rows" Margin="3" Width="40" PreviewKeyDown="tb_PreviewKeyDown_NumberOnly"/>
            <Label HorizontalAlignment="Center" Content="Столбцов" Margin="3"/>
            <TextBox x:Name="tb_columns" Margin="3" Width="40" PreviewKeyDown="tb_PreviewKeyDown_NumberOnly"/>
            <Button Content="Сохранить" Margin="3" IsDefault="True" Click="btn_Enter_click" Width="70"/>
            <Button Content="Отмена" Margin="3" IsCancel="True" Click="btn_Cancel_click" Width="60"/>
        </StackPanel>
    </Grid>
</Window>
