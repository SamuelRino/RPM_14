<Window x:Class="RPM_14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPM_14"
        mc:Ignorable="d"
        Title="Практическая 14" Height="450" Width="800" MinHeight="270" MinWidth="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem x:Name="btn_Save" Header="Сохранить" Click="btn_Save_Click" />
                <MenuItem x:Name="btn_Open" Header="Открыть" Click="btn_Open_Click"/>
                <Separator/>
                <MenuItem x:Name="btn_Preferences" Header="Настройки" Click="btn_Preferences_Click"/>
                <MenuItem x:Name="btn_Exit" Header="Выход" Click="btn_Exit_Click" />
            </MenuItem>

            <MenuItem Header="Инфо">
                <MenuItem x:Name="btn_ProgramInfo" Header="О программе" Click="btn_ProgramInfo_Click" />
                <MenuItem x:Name="btn_DevInfo" Header="О разработчике" Click="btn_DevInfo_Click" />
            </MenuItem>
        </Menu>

        <ToolBar Grid.Row="1">
            <Button x:Name="btn_Fill" Content="Заполнить случайными значениями" Click="btn_Fill_Click" />
            <Separator/>
            <Button x:Name="btn_SetNull" Content="Заполнить нулями" Click="btn_SetNull_Click"/>
        </ToolBar>

        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Исходные данные" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dg" Grid.Row="0" CanUserAddRows="False" PreviewKeyDown="dg_PreviewKeyDown" PreviewTextInput="dg_PreviewTextInput" CurrentCellChanged="dg_CurrentCellChanged" CellEditEnding="dg_CellEditEnding"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Label Content="Строк:" VerticalAlignment="Center"/>
                        <TextBox x:Name="tb_rows" VerticalAlignment="Center" Width="60" PreviewKeyDown="tb_PreviewKeyDown_NumberOnly" TextChanged="tb_rows_TextChanged" />

                        <Label Content="Столбцов:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox x:Name="tb_columns" VerticalAlignment="Center" Width="60" PreviewKeyDown="tb_PreviewKeyDown_NumberOnly"/>

                        <Button x:Name="btn_SetSize" Content="Установить" VerticalAlignment="Center" Margin="20,0,0,0" Click="btn_SetSize_Click" />
                    </StackPanel>
                </Grid>

                <GroupBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="btn_NoIdeas" Header="Уно проблемо" Click="btn_NoIdeas_Click" />
                    </ContextMenu>
                </GroupBox.ContextMenu>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Результат" BorderBrush="Black">
                <StackPanel>
                    <Label Content="Номер столбца:" HorizontalAlignment="Center"/>
                    <TextBox x:Name="tb_ColumnRes" Width="30" IsReadOnly="True"/>

                    <Label Content="Значение:" HorizontalAlignment="Center"/>
                    <TextBox x:Name="tb_ValueRes" Width="35" IsReadOnly="True"/>

                    <Button x:Name="btn_Calculate" Content="Рассчитать" HorizontalAlignment="Center" Margin="15" Click="btn_Calculate_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <StatusBar Grid.Row="3">
            <TextBlock x:Name="tb_size" Text="Размер:"/>
            <Separator/>
            <TextBlock x:Name="tb_cell" Text="Ячейка не выбрана"/>
        </StatusBar>
    </Grid>
</Window>
